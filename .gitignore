__pycache__/
*.py[cod]
*$py.class

# Virtual environments
venv/
ENV/
env/
.env

# Distribution / packaging
build/
dist/
*.egg-info/

# Testing / coverage
.coverage
htmlcov/
.tox/
.nox/

# Jupyter
.ipynb_checkpoints

# IDEs
.vscode/
.idea/

# OS
.DS_Store
Thumbs.db

# Secret keys / env files
.env
*.pem
EOF
